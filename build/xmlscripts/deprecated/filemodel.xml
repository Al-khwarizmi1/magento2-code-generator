<?xml version="1.0" encoding="UTF-8"?>

<project name="FileModel" basedir="../../..">

    <target name="filemodel:generate"
            description="Generate Magento 2 File Model">

        <phingcall target="generateCode">
            <property name="template" value="filemodel"/>
            <property name="params" value="modelname,database_field_id,form_field_name"/>
        </phingcall>

        <!-- Echo post manual actions
        * Add your custom fields on Setup/InstallSchema.php
        * Add the route to the uploader on your file field uploaderConfig url:
            i.e:
            <item name="uploaderConfig" xsi:type="array">
                <item name="url" xsi:type="string">{{route_id}}/file/uploader</item>
            </item>
        * Edit your form DataProvider to get the file data in the right format:
            use method ${Entityname}->getFileValueForForm();
        -->

    </target>

</project>