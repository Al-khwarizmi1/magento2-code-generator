            description="Generate Magento 2 CRUD UI Grid and Form">

        <phingcall target="generateCode">
            <property name="template" value="uigridform"/>
            <property name="params" value="modelname,database_field_id,Vendor_Module::parentmenu"/>
        </phingcall>

        <!-- Echo post manual actions
        * Add your custom fields on Setup/InstallSchema.php
