{
  "name": "staempfli/magento2-code-generator",
  "description": "Staempfli AG - Magento 2 Code Generator Tool",
  "type": "staempfli-mage-tool",
  "license": [
    "GPL-3.0"
  ],
  "authors": [
    {
      "name": "Juan Alonso",
      "email": "juan.alonso@staempfli.com"
    }
  ],
  "require": {
    "symfony/console": "^3.1",
    "symfony/yaml": "^3.1"
  },
  "autoload": {
    "psr-4": { "Staempfli\\": "src/Staempfli" }
  },
  "config": {
    "bin-dir": "bin"
  },
  "bin": ["mg2-codegen"],
  "scripts": {
    "setPermissionsBin": "chmod -R +x bin",
    "post-install-cmd": [
      "@setPermissionsBin"
    ],
    "post-update-cmd": [
      "@setPermissionsBin"
    ]
  }
}
