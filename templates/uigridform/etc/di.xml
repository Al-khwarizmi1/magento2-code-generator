            <argument name="collections" xsi:type="array">
                <item name="${vendorname}_${modulename}_${modelname}_listing_data_source" xsi:type="string">${Vendorname}\${Modulename}\Model\ResourceModel\${Modelname}\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="${Vendorname}\${Modulename}\Model\ResourceModel\${Modelname}\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">${vendorname}_${modulename}_${modelname}</argument>
            <argument name="eventPrefix" xsi:type="string">${vendorname}_${modulename}_${modelname}_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">${vendorname}_${modulename}_${modelname}_grid_collection</argument>
